<div class="d-flex justify-content-center">
  <div class="card cardWidth">
    <h2 class="d-flex justify-content-center mt-3">Forgot your password?</h2>
    <div class="m-5">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: :false } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control mb-3" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions",class:"btn btn-success mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div> 