<div class="index-search center">
    <%= form_with url: albums_search_path, method: :get do |form|%>
      <div class="input-group mb-3">
        <%= form.text_field :query,value: $tags,placeholder: "Search tags...",class: "form-control", :required => true %>
        <div class="input-group-append">
          <%= form.submit "Search",class:"btn btn-success"%>
        </div>
      </div>
    <% end %>
</div>

<div class="row justify-content-center">
  <% @albums.each do |item| %>
    <% if item.publish == $publish %>
      <div class="index-card col-lg-4 col-md-6 bg-light overflow-hidden">
        <div class="pt-2 ">
          <h3><%=item.title%></h3>
        </div>
        <div class="m-3">
          <a href=<%=Rails.application.routes.url_helpers.rails_blob_path(item.album_pic, only_path: true)%> data-fancybox>
            <img class="img" src=<%=Rails.application.routes.url_helpers.rails_blob_path(item.album_pic, only_path: true)%> />
          </a>
        </div>
        <div class="pb-3">
          <span class="cardtext">Published-by : </span><%= item.user.name%><br>
          <span class="cardtext">Tags : </span><%=item.album_tags%><br>
          <span class="cardtext">Published-on : </span><%= item.created_at.strftime('%F')%><br>
          <span class="cardtext">Last-updated : </span><%=item.updated_at.strftime('%F')%><br>
        </div>
        <div class="d-flex">    
          <%=link_to "Show",item, class:"cardbtn btn btn-success "%>
          <% if user_signed_in? %>
            <%=link_to "Edit",edit_album_path(item), class:"cardbtn btn btn-success ms-1 me-1"%>
            <%=link_to "Delete",item, data: { turbo_method: :delete, turbo_confirm: "Are You Sure!!!" },class:"cardbtn btn btn-success "%>
          <% end %>
        </div>
      </div>        
    <% end %>
  <% end %>
</div> 
